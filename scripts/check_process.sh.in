check_os()
{
  OS_NAME=`$UNAME -s`
  case $OS_NAME in
    *Linux* )
      TARGET_OS="Linux"
      ;;
    *Solaris* )
      TARGET_OS="Solaris"
      ;;
    *Darwin* )
      TARGET_OS="MacOSX"
      ;;
    * )
      TARGET_OS="Linux"
      ;;
  esac
}

check_binaries()
{
  ret=1
  if test -x $PS ; then
    FAULTY_PROCESS="ps"
    return $ret
  fi
  if test -x $GREP ; then
    FAULTY_PROCESS="grep"
    return $ret
  fi
  if test -x $WC ; then
    FAULTY_PROCESS="wc"
    return $ret
  fi
  if test -x $UNAME ; then
    FAULTY_PROCESS="uname"
    return $ret
  fi
  if test -x $SED ; then
    FAULTY_PROCESS="sed"
    return $ret
  fi
  ret=0
  return $ret
}

check_process_alive()
{
  if test "x$TARGET_OS" = "xSolaris" ; then
    LINES=`$PS -p $SEARCHED_PID -o comm | \
           $GREP $SEARCHED_PROCESS | \
           $WC -l`
  else
    LINES=`$PS -p $SEARCHED_PID -o command | \
           $GREP $SEARCHED_PROCESS | \
           $WC -l | $SED -e 's/ //g'`
  fi
  if test "x$LINES" = "x0" ; then
    EXIT_CODE=0
  else
    if test "x$LINES" = "x1" ; then
      EXIT_CODE=1
    else
      EXIT_CODE=2
    fi
  fi
}

set_binaries()
{
  WHICH=`which which`
  if test "x$WHICH" = "x" ; then
    WHICH="/usr/bin/which"
  fi
  if ! test -x $WHICH ; then
    PS="/bin/ps"
    GREP="/bin/grep"
    WC="/usr/bin/wc"
    UNAME="/bin/uname"
    SED="/bin/sed"
  else
    PS=`$WHICH ps`
    GREP=`$WHICH grep`
    WC=`$WHICH wc`
    UNAME=`$WHICH uname`
    SED=`$WHICH sed`
  fi
  if test "x$PS" = "x" ; then
    PS="/bin/ps"
  fi
  if test "x$GREP" = "x" ; then
    GREP="/bin/grep"
  fi
  if test "x$WC" = "x" ; then
    WC="/bin/wc"
  fi
  if test "x$UNAME" = "x" ; then
    UNAME="/bin/uname"
  fi
  if test "x$SED" = "x" ; then
    SED="/bin/sed"
  fi
}

WHICH=
PS=
GREP=
WC=
UNAME=
SED=
LINES=
SEARCHED_PID=
SEARCHED_PROCESS=
PROCESS_NAME=
PROCESS_PID=
TARGET_OS=
EXIT_CODE=2
  while test $# -gt 0
  do
    case $1 in
    --process_name )
      shift
      if test "x$PROCESS_NAME" = "x1" ; then
        exit $EXIT_CODE
      fi
      PROCESS_NAME="1"
      SEARCHED_PROCESS="$1"
      ;;
    --pid )
      shift
      if test "x$PROCESS_PID" = "x1" ; then
        exit $EXIT_CODE
      fi
      PROCESS_PID="1"
      SEARCHED_PID="$1"
      ;;
    * )
      exit $EXIT_CODE
    esac
    shift
  done
  if test "x$PROCESS_NAME" = "x" ; then
    exit $EXIT_CODE
  fi
  if test "x$PROCESS_PID" = "x" ; then
    exit $EXIT_CODE
  fi

  set_binaries
  if check_binaries; then
    exit $EXIT_CODE
  else
    check_os
    check_process_alive
  fi
  exit $EXIT_CODE
